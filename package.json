{
  "name": "trade-gateway-sim",
  "version": "0.1.0",
  "private": true,
  "pnpm": {
    "onlyBuiltDependencies": ["better-sqlite3"]
  },
  "scripts": {
    "dev": "next dev",
    "dev:clean": "node -e \"require('fs').rmSync('.next',{recursive:true,force:true})\" 2>nul; next dev",
    "build": "next build",
    "build:clean": "pnpm clean && pnpm build",
    "clean": "rimraf .next",
    "prebuild": "pnpm clean",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "eod": "tsx scripts/eod.ts --config configs/daily.json",
    "eod:smoke": "tsx scripts/eod.ts --config configs/smoke.json --gates configs/ops-gates-smoke.json",
    "eod:ci": "tsx scripts/eod.ts --config configs/daily.json --ci",
    "test:sweep": "tsx tests/sweep.test.ts"
  },
  "dependencies": {
    "better-sqlite3": "^11.6.0",
    "next": "15.0.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "ws": "^8.19.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@types/ws": "^8.18.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "15.0.3",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
  }
}
